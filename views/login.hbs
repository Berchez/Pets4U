    <link rel="preconnect" href="https://fonts.gstatic.com">
    <script src="https://kit.fontawesome.com/bf7e05c402.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-xl navbar-light">
                <a onclick="location.href='/'" class="navbar-brand-img">
                    <img id="logo" src="/logo-pronta.png" alt="Pets4U"></img>
                </a>
                <div class="example">
                    <a onclick="location.href='/'">
                        <p id="texto-Pets">Pets4U</p>
                    </a>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="nav-links ml-auto">
                        <li><a onclick="location.href='/#Produto'" class="nav-item nav-link"><p>Produtos</p></a></li>
                        <li><a onclick="location.href='/login'" class="nav-item nav-link"><p>Faça login</p></a></li>
                        <li><a onclick="location.href='/register'" class="nav-item nav-link"><p>Cadastre-se</p></a></li>

                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <div class="backgroundNavStaticTop">
        <form class="form" action="/auth/login"  method="POST">
        <div class="card" style="border-radius: 30px;">
            <div class="card-top">
                <img class="imglogin" src="/logo-pronta.png" alt=""><br><br>
                <h3 class="title" style="font-weight: bold;">Faça seu Login</h3>
            </div>
            <div class="card-group">
                <label>Email:</label>
                <input style="border-radius: 6px; outline: 0; width: 100%; height: 35px; padding: 5px;" type="text" name="email" placeholder="Digite seu nome de usuário" required>
            </div>
            <div class="card-group">
                <label>Senha:</label>
                <input style="border-radius: 6px; outline: 0; width: 100%; height: 35px; padding: 5px;" type="password" name="senha" placeholder="Digite sua senha" required>
            </div>
            <div class="card-group btn">
                <button type="submit">LOGIN</button>
            </div>
            <div class="cadastre-se btn">
                <button onclick="location.href='/register'" widht type="button">
                    Cadastre-se
                </button>
            </div>
        </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
